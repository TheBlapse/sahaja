---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <main
    class="mt-36 w-full min-h-screen flex flex-col items-center content-center justify-start align-middle"
  >
    <div
      class="max-w-screen-sm flex flex-col gap-3 px-3 md:px-0 items-center content-center justify-start"
    >
      <h1
        class="text-lightheading dark:text-darkheading text-lg md:text-xl font-medium"
      >
        {frontmatter.title}
      </h1>
      <p class="text-left w-full">Written by {frontmatter.author}</p>
      <slot />
    </div>
  </main>
</Layout>
